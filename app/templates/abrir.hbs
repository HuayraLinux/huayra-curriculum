<div class="botones">
  <button {{action "regresar"}} id="regresar" class="btn btn-warning">{{fa-icon "arrow-left"}} Regresar</button>
</div>

<div class="row">
  <div class="abrir">
	<p class="tutorial"> Currículums disponibles: </p>


    {{#if model}}
    <table class="table lista-cvs">
      <thead>
        <th>Nombre</th>
        <th>Última modificación</th>
        <th></th>
      </thead>

      <tbody>
        {{#each model as |c|}}
          <tr>
            <td>{{c.apellido}}, {{c.nombre}}</td>
            <td>{{moment-from-now c.fecha}}</td>
            <td>
              <button {{action "abrir" c}} title="Abrir Currículum" class="btn-abrir"></button>
              <button {{action "borrar" c}} title="Borrar Currículum" class="btn-borrar"></button>
            </td>
          </tr>
        {{/each}}
      </tbody>
  </table>
    {{else}}
        <p class="abrir-mensaje">Uh, parece que no hay ningún currículum creado aún.</p>
    {{/if}}

  </div>
</div>
