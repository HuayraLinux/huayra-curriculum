<style>

.stepwizard-step p {
  margin-top: 10px;
}

.stepwizard-row {
  display: table-row;
}

.stepwizard {
  margin-top: 10px;
  margin-bottom: 10px;
  display: table;
  width: 100%;
  position: relative;
}

.stepwizard-step button[disabled] {
  opacity: 1 !important;
  filter: alpha(opacity=100) !important;
}

.stepwizard-row:before {
  top: 14px;
  bottom: 0;
  position: absolute;
  content: " ";
  width: 100%;
  height: 1px;
  background-color: #ccc;
  z-order: 0;

}

.stepwizard-step {
  display: table-cell;
  text-align: center;
  position: relative;
}

.btn-circle {
  width: 30px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.428571429;
  border-radius: 15px;
}
</style>

<div class="stepwizard">

  <div class="stepwizard-row">

    {{#each p in pasos}}
      <div class="stepwizard-step">
        {{#if p.activo}}
          <button type="button" class="btn btn-primary btn-circle">{{p.numero}}</button>
        {{else}}
          <button type="button" {{action 'change' p.ruta}} class="btn btn-default btn-circle">{{p.numero}}</button>
        {{/if}}
        <p>{{p.texto}}</p>
      </div>
    {{/each}}

  </div>

</div>
